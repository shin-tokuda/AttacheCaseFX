/* ---------------------------------------------
全体
--------------------------------------------- */

.root {
	-fx-border-color : {@200};
	-fx-font-family: "Meiryo";
}

/* ---------------------------------------------
ヘッダーエリア
--------------------------------------------- */

#appTitle {
	-fx-font-size: 20;
	-fx-font-family: "Arial";
	-fx-font-weight: bold;
	-fx-text-fill: {@white};
	-fx-padding: 0 0 0 8;
}

.header_bar {
	-fx-background-color: {@500};
}

.header_bar .jfx-hamburger StackPane {
	-fx-background-color: {@white};
}

.header_bar .jfx-button {
	-fx-text-fill: {@white};
}

/* ---------------------------------------------
コンテンツエリア
--------------------------------------------- */

.sideTitle {
	-fx-font-size: 30px;
	-fx-font-family: "Arial Black";
	-fx-fill: #9E9E9E;
	-fx-effect: innershadow(three-pass-box , rgba(0, 0, 0, 0.7) , 6, 0.0 , 0 , 2);
}

#menus VBox {
	-fx-background-color: {@white};
	-fx-padding: 0;
}

#menus .menu-item-box {
	-fx-padding: 8;
}

#menus .menu-item-box BorderPane {
	-fx-padding: 0 4 0 0;
}

.contents .jfx-button {
	-fx-background-color: {@500};
	-jfx-button-type: FLAT;
	-fx-text-fill: {@white};
}

.contents .jfx-text-field {
	-jfx-focus-color: {@500};
	-jfx-unfocus-color: {@500};
}

.contents .jfx-text-area {
	-jfx-focus-color: {@500};
	-jfx-unfocus-color: {@500};
}

.contents .separator {
	-fx-background-color: {@500};
}

.contents .tab-header-background {
	-fx-background-color: {@500};
}

/* ---------------------------------------------
スナックバー
--------------------------------------------- */

.jfx-snackbar-content {
	-fx-background-color: {@black};
}

.jfx-snackbar-toast {
	-fx-text-fill: {@white};
}
